<!ENTITY commonSetup SYSTEM "./../../../config/properties.xml">
<!ENTITY commonBuild SYSTEM "./../../../config/common.xml">
<!ENTITY testproperties SYSTEM "./build.properties">
]>

<project name="ejb-ejb30-persistence-tx_propagation-App" default="usage" basedir=".">

    &commonSetup;
    &commonBuild;
    &testproperties;

    <target name="all" depends="ejb-setup,build,setup,deploy,run,undeploy,unsetup"/>
    <target name="all-appclient-exposed-dsd" depends="appclient-setup,build,setup,deploy,run,undeploy,unsetup"/>

    <target name="appclient-setup" depends="init-common">
        <copy file="client/Client.java.dsd" tofile="client/Client.java" overwrite="yes"/>
        <copy file="ejb/SfulBean.java.nodsd" tofile="ejb/SfulBean.java" overwrite="yes"/>
    </target>

    <target name="ejb-setup" depends="init-common">
        <copy file="ejb/SfulBean.java.dsd" tofile="ejb/SfulBean.java" overwrite="yes"/>
        <copy file="client/Client.java.nodsd" tofile="client/Client.java" overwrite="yes"/>
    </target>

    <target name="clean" depends="init-common">
      <antcall  target="clean-common"/>
    </target>

    <target name="compile" depends="clean">
        <antcall target="compile-common">
            <param name="src" value="ejb"/>
        </antcall>
        <antcall target="compile-common">
            <param name="src" value="client"/>
        </antcall>
    </target>

    <target name="setup" depends="init-common">
      <antcall target="execute-sql-common">
        <param name="sql.file" value="sql/create.sql"/>
        <param name="db.url" value="jdbc:derby://localhost:1527/${db.name};create=true;"/>
      </antcall>
    </target>

    <target name="unsetup" depends="init-common">
      <antcall target="execute-sql-common">
        <param name="sql.file" value="sql/drop.sql"/>
        <param name="db.url" value="jdbc:derby://localhost:1527/${db.name};create=true;"/>
      </antcall>
    </target>

    <target name="build" depends="compile">
        <mkdir dir="${assemble.dir}/lib"/>
        <jar destfile="${assemble.dir}/lib/${appname}-lib.jar"
             basedir="${build.classes.dir}"
             includes="**/Person.class">
        </jar>
        <jar destfile="${assemble.dir}/lib/${appname}-par1.jar">
             <metainf file="descriptor/persistence.xml"/>
        </jar>
        <antcall target="build-ear-common">
            <param name="ejbjar.classes"
              value="**/Sful*.class"/>
            <param name="appclientjar.classes"
              value="**/Client.class,**/Sful.class"/>
        </antcall>
        <jar destfile="${assemble.dir}/${appname}App.ear" update="yes"
             basedir="${assemble.dir}"
             includes="lib/${appname}-lib.jar, lib/${appname}-par1.jar">
        </jar>

    </target>

    <target name="deploy"
            depends="init-common">
        <antcall target="deploy-common"/>
    </target>

    <target name="run" depends="init-common">
        <antcall target="runclient-common"/>
    </target>

    <target name="undeploy" depends="init-common">
        <antcall target="undeploy-common"/>
    </target>

    <target name="usage">
        <antcall target="usage-common"/>
    </target>

    <target name="runclient-standalone" depends="clean-db">
       <java  fork="on"
              failonerror="true"
              classpath="${env.S1AS_HOME}/lib/jakartaee.jar:${env.S1AS_HOME}/lib/gf-client.jar:${build.classes.dir}:${mvn.lib.dir}/reporter.jar"
              classname="${simple.client}">
              <sysproperty key="org.omg.CORBA.ORBInitialPort" value="${orb.port}"/>
              <jvmarg value="--add-opens=java.base/java.lang=ALL-UNNAMED" />
        </java>
    </target>

    <target name="clean-db" depends="init-common">
      <antcall target="execute-sql-common">
        <param name="sql.file" value="sql/drop.sql"/>
        <param name="db.url" value="jdbc:derby://localhost:1527/${db.name};create=true;"/>
      </antcall>
      <antcall target="execute-sql-common">
        <param name="sql.file" value="sql/create.sql"/>
        <param name="db.url" value="jdbc:derby://localhost:1527/${db.name};create=true;"/>
      </antcall>
    </target>

</project>
